rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function role() {
      return isSignedIn()
        ? firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.rol
        : null;
    }

    function hasRole(r) {
      return role() == r;
    }

    function isAdmin() {
      return isSignedIn()
        && firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)).data.enabled == true;
    }

    // Fotos de reportes (VISITADOR)
    match /reportes_equipos/{uid}/{reporteId}/{fileName} {
      allow write: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(png|jpeg)');

      allow read: if isSignedIn()
        && (request.auth.uid == uid
          || hasRole('INGENIERO_BIOMEDICO')
          || hasRole('GERENCIA'));
    }

    // Fotos de solicitudes de equipos del paciente (VISITADOR)
    match /solicitudes_equipos_paciente/{uid}/{solicitudId}/{fileName} {
      allow write: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(png|jpeg)');

      allow read: if isSignedIn()
        && (request.auth.uid == uid
          || hasRole('INGENIERO_BIOMEDICO')
          || hasRole('GERENCIA'));
    }

    // Fotos de equipos (BIOMEDICO)
    match /equipos/{equipoId}/{fileName} {
      allow write: if isSignedIn()
        && hasRole('INGENIERO_BIOMEDICO')
        && request.resource != null
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/(png|jpeg|jpg)');

      allow delete: if isSignedIn()
        && hasRole('INGENIERO_BIOMEDICO');

      allow read: if isSignedIn()
        && (hasRole('INGENIERO_BIOMEDICO')
          || hasRole('AUXILIAR_ADMINISTRATIVA')
          || hasRole('GERENCIA')
          || isAdmin());
    }

    // Certificados de calibraciÃ³n (PDF)
    match /calibraciones/{equipoId}/{fileName} {
      allow write: if isSignedIn()
        && hasRole('INGENIERO_BIOMEDICO')
        && request.resource != null
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('application/pdf');

      allow read: if isSignedIn()
        && (hasRole('INGENIERO_BIOMEDICO')
          || hasRole('AUXILIAR_ADMINISTRATIVA')
          || hasRole('GERENCIA')
          || isAdmin());
    }

    // Deny by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
